@using Blog.Models
@model List<CategoryModel>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("BLOG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (CategoryModel categoryModel in Model)
                {
                    string categoryName = categoryModel.Name;
                    string categoryText = categoryName.ToUpper();
                    string categoryLink = $"/Categories/{categoryName}";

                <li><a href=@categoryLink>@categoryText</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("SEARCH", "", "Search", new { }, new { })</li>
                @{
                    if (ViewBag.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(((string)ViewBag.UserName).ToUpper(), "Index", "Home", new { }, new { })</li>
                        <li>@Html.ActionLink("LOG OUT", "LogOut", "Account", new { }, new { })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("LOG IN", "LogIn", "Account", new { ReturnUrl = ViewBag.CurrentUrl }, new { })</li>
                        <li>@Html.ActionLink("SIGN UP", "SignUp", "Account", new { }, new { })</li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
