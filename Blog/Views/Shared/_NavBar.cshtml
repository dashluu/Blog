@using Blog.Models
@model List<CategoryModel>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("BLOG", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (CategoryModel categoryModel in Model)
                {
                    <li>@Html.ActionLink(categoryModel.Name.ToUpper(), "Category", "Home", new { category = categoryModel.Name }, new { })</li>
                }
            </ul>
        </div>
    </div>
</div>
