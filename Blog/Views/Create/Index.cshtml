@section Style {
    <link href="@Url.Content("~/Content/Create/create.css")" rel="stylesheet" type="text/css" />
}

@section scripts{
    <script src="https://cloud.tinymce.com/stable/tinymce.js"></script>
    <script src="~/Scripts/TinyMCE/tinymce_app.js"></script>
}

<div class="container" id="editor-section">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @using (Html.BeginForm("Index", "Create", FormMethod.Post, new { id = "create-form" }))
            {
                <input type="text" name="Post.Title" class="create-input" placeholder="Title" />
                <input type="text" name="Post.ThumbnailImageSrc" class="create-input" placeholder="Thumbnail image" />
                <textarea name="Post.ShortDescription" class="create-input" placeholder="Short description"></textarea>
                <textarea name="Post.Content" class="create-input" placeholder="Content"></textarea>
                <input type="submit" id="submit-btn" />
            }
        </div>
    </div>
</div>
