@using Blog.Models
@model List<PaginationModel<PostCardModel>>

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/Bar/nav-bar.css" />
    <link href="~/Content/Home/home.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Home/post-grid.css" />
}

@section scripts {
    <script src="~/Scripts/Home/post-grid.js"></script>
}

@if (Model == null || Model.Count == 0)
{
    return;
}

<div class="container" id="content-block">
    <div class="row">
        @foreach (PaginationModel<PostCardModel> postCardPaginationModel in Model)
        {
            Html.RenderPartial("~/Views/Home/_PostGrid.cshtml", postCardPaginationModel);
        }
    </div>
</div>